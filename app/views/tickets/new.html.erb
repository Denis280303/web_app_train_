<h1 style="padding-left: 20px;">Купити білет</h1>

<%= form_for [@train, @ticket] do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(train.errors.count, "error") %> prohibited this train from being saved:</h2>

      <ul>
        <% train.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field size">
    <%= f.hidden_field :start_station_id, value: @start_station.id %>
