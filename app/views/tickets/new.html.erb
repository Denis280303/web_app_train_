    <%= f.label :user_first_name, "Ім'я:" %><br>
    <%= f.text_field :user_first_name %>
  </div>

  <div class="field size">
    <%= f.label :user_last_name, "Прізвище:" %><br>
    <%= f.text_field :user_last_name %>
  </div>

  <div class="field size">
    <%= f.label :user_fathers_name, 'По-батькові:' %><br>
    <%= f.text_field :user_fathers_name %>
  </div>

  <div class="field size">
    <%= f.label :user_passport, 'Паспортні дані:' %><br>
    <%= f.text_field :user_passport %>
  </div>

  <div class="field size">
    <%= f.submit 'Cтворити білет' %><br>
  </div>

<% end %> 