<p id="notice"><%= notice %></p>

<p>
  <strong>Номер:</strong>
  <%= @train.number %>
</p>

<% if @train.route.nil? %>
  <p>Маршрут не призначений!</p>
<% else %>
  <p><strong>Маршрут потяга: </strong><%= @train.route.title %></p>
  <% end %>

<% if @train.wagons.count == 0 %>
  <p>У потяга немає вагонів!</p>
<% else %>
<strong>Вагони:</strong>
  <% if @train.order_wagon %>
    <p><strong>Нумерація з голови</strong></p>
    <% @train.wagons.order('number_wag ASC')%>
  <% else %>
    <p><strong>Нумерація з хвоста</strong></p>
    <% @train.wagons.order('number_wag DESC') %>
  <% end %>

  <% @train.wagons.each do |wagon| %>
    <p><tr>
      <td><strong><%= link_to "Номер вагона: #{wagon.number_wag}", wagon_path(wagon)%></strong></td>
      <td><%= wagon.type_wag %></td>
    </tr></p>
  <% end %>
<% end %>

<%= link_to 'Змінити', edit_train_path(@train) %> |
<%= link_to 'Назад', trains_path %>
