<tr>
  <td><div id="route_title_<%=route.id%>" class="size"><%= route.title %></div>
    <%= render 'inline_form', route: route, hidden: true %>
  </td>
  <td><%= link_to t('common.show'), admin_route_path(route), class: "buttonItem size" %></td>
  <td><%= link_to t('common.edit'), edit_admin_route_path(route), class: 'edit_route size', data: { route_id: route.id }, class: "buttonItem size" %></td>
  <td><%= link_to t('common.delete'), admin_route_path(route), class: "buttonItem size", method: :delete, data: { confirm: 'Справді видалити?' }%></td>
</tr>