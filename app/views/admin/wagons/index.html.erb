<p id="notice"><%= notice %></p>

<h1>Вагони</h1>

<table>
  <thead>
  </thead>

  <tbody>
    <% @wagons.each do |wagon|%>
    <tr>
      <td>Тип вагона: <%= wagon.type %>, номер вагона: <%= wagon.number_wag%></td>
      <td><%= link_to 'Показати', admin_wagon_path(wagon) %></td>
      <td><%= link_to 'Видалити', admin_wagon_path(wagon), method: :delete, data: { confirm: 'Ви впевнені?' }%></td>
    </tr>
    <%end%>
    
  </tbody>
</table>

<br>

