<h1 style="padding-left: 20px;">Локації</h1>

<table>
  <thead>
    <tr>
      <th><h2>Назва</h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |railway_station| %>
      <tr>
        <td class="size"><%= railway_station.title %></td>
        <td><%= link_to t('common.show'), admin_railway_station_path(railway_station), class: "buttonItem size" %></td>
        <td><%= link_to t('common.edit'), edit_admin_railway_station_path(railway_station), class: "buttonItem size" %></td>
        <td><%= link_to t('common.delete'), admin_railway_station_path(railway_station), class: "buttonItem size", method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Нова локація', new_admin_railway_station_path, class: "buttonItem size" %>
<hr>
<%= link_to t('common.back'), wellcome_index_path, class: "buttonItem size" %>
