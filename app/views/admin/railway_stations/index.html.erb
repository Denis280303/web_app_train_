<h1>Локації</h1>

<table>
  <thead>
    <tr>
      <th>Назва</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |railway_station| %>
      <tr>
        <td><%= railway_station.title %></td>
        <td><%= link_to t('common.show'), admin_railway_station_path(railway_station), class: "buttonItem" %></td>
        <td><%= link_to t('common.edit'), edit_admin_railway_station_path(railway_station), class: "buttonItem" %></td>
        <td><%= link_to t('common.delete'), admin_railway_station_path(railway_station), class: "buttonItem", method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Нова локація', new_admin_railway_station_path, class: "buttonItem" %>
<%= link_to t('common.back'), wellcome_index_path, class: "buttonItem" %>
