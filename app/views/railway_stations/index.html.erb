<p id="notice"><%= notice %></p>

<h1>Станції</h1>

<table>
  <thead>
    <tr>
      <th>Назва</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |railway_station| %>
      <tr>
        <td><%= railway_station.title %></td>
        <td><%= link_to 'Показати', railway_station %></td>
        <td><%= link_to 'Змінити', edit_railway_station_path(railway_station) %></td>
        <td><%= link_to 'Видалити', railway_station, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Нова станція', new_railway_station_path %>
