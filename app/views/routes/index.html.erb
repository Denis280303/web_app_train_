<p id="notice"><%= notice %></p>

<h1>Список маршрутів</h1>

<table>
  <thead>
    <tr>
      <th>Назва</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.title %></td>
        <td><%= link_to 'Показати', route %></td>
        <td><%= link_to 'Редагувати', edit_route_path(route) %></td>
        <td><%= link_to 'Видалити', route, method: :delete, data: { confirm: 'Справді видалити?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новий маршрут', new_route_path %>